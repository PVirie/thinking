{
    "configurations": [
        {
            "name": "Docker: Python - GPU",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "docker-compose-start: gpu",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app/src"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1"
        },
        {
            "name": "Docker: Python - NOGPU",
            "type": "python",
            "request": "attach",
            "preLaunchTask": "docker-compose-start: cpu",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app/src"
                }
            ],
            "port": 5678,
            "host": "127.0.0.1"
        }
    ]
}
