{
    "configurations": [
        {
            "name": "Docker: Python - GPU",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "docker-compose-start: gpu",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app/src"
                },
                {
                    "localRoot": "${workspaceFolder}/tasks",
                    "remoteRoot": "/app/tasks"
                }
            ],
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            }
        },
        {
            "name": "Docker: Python - NOGPU",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "docker-compose-start: cpu",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app/src"
                },
                {
                    "localRoot": "${workspaceFolder}/tasks",
                    "remoteRoot": "/app/tasks"
                }
            ],
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            }
        },
        {
            "name": "Docker: Python - Currentfile cpu",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "docker-compose-start: current file",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app/src"
                },
                {
                    "localRoot": "${workspaceFolder}/tasks",
                    "remoteRoot": "/app/tasks"
                }
            ],
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            }
        }
    ]
}
